{
  "extends": "@plan-prise/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["*.ts", "src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "paths": { "@/*": ["./*"] }
    },
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  }
}
