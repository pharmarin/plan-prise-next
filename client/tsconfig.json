{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "es2017",
    "types": ["node", "jest", "testing-library__jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    ".eslintrc.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "/Users/Marin/Sites/plan-prise/client/.next/types/**/*.ts",
    "next-auth/index"
  ],
  "exclude": ["node_modules", "./prisma/seed"]
}
