// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("PRISMA_DATABASE_URL")
  shadowDatabaseUrl = env("PRISMA_SHADOW_DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          BigInt    @default(autoincrement()) @id
  admin       Boolean   @default(false)
  firstName   String?
  lastName    String?
  displayName String?
  student     Boolean
  rpps        BigInt?
  email       String    @unique
  password    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  approvedAt  DateTime?
}