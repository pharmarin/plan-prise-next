{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "db:generate": {
      "dependsOn": ["^db:start"],
      "inputs": ["schema.prisma"],
      "cache": false
    },
    "db:push": {
      "dependsOn": ["^db:start"],
      "inputs": ["schema.prisma"],
      "cache": false
    },
    "db:start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "lint": {},
    "lint:fix": {}
  },
  "globalEnv": [
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_CAPTCHA_SITE_KEY",
    "NODE_ENV"
  ]
}
