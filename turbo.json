{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "clean": { "cache": false },
    "db:generate": {
      "inputs": ["schema.prisma"],
      "cache": false
    },
    "db:push": {
      "inputs": ["schema.prisma"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "lint": {},
    "lint:fix": {},
    "type-check": {
      "dependsOn": ["^db:generate"],
      "cache": false
    }
  },
  "globalEnv": [
    "APP_NAME",
    "FRONTEND_URL",
    "NEXTAUTH_URL",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_CAPTCHA_SITE_KEY",
    "NTFY_URL_ADMIN",
    "NODE_ENV",
    "PORT",
    "PRISMA_DATABASE_URL",
    "RECAPTCHA_SECRET",
    "VERCEL_URL"
  ]
}
